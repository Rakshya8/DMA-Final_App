<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.todoApp.android.roomdatapersistance">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- The manifest entry for the MainActivity -->
        <activity
            android:name="com.todoApp.android.roomdatapersistance.SplashActivity"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>



        <!-- AddTaskActivity -->
        <activity
            android:name="com.todoApp.android.roomdatapersistance.AddTaskActivity"
            android:launchMode="singleTop"
            android:label="@string/add_task_activity_name"
            android:parentActivityName="com.todoApp.android.roomdatapersistance.MainActivity"/>

        <activity
            android:name="com.todoApp.android.roomdatapersistance.AddCatActivity"
            android:launchMode="singleTop"
            android:label="@string/add_task_cat_name"
            android:parentActivityName="com.todoApp.android.roomdatapersistance.MainActivity"/>

        <activity android:name="com.todoApp.android.roomdatapersistance.LoginActivity"/>
        <activity android:name="com.todoApp.android.roomdatapersistance.MainActivity"/>
    </application>

</manifest>